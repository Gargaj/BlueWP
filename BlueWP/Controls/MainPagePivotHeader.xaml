<UserControl
    x:Class="BlueWP.Controls.MainPagePivotHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

  <StackPanel Orientation="Vertical" Padding="10,0,10,0">
    <FontIcon HorizontalAlignment="Center" Margin="0,12,0,0" Glyph="{Binding Glyph}" FontSize="16" />
    <TextBlock Text="{Binding Label}" Style="{StaticResource CaptionTextBlockStyle}" TextAlignment="Center" HorizontalAlignment="Center" Margin="2,5,2,7" />
  </StackPanel>
</UserControl>
